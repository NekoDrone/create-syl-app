{
  "name": "create-syl-app",
  "version": "0.3.1",
  "description": "A simple CLI tool to scaffold new projects with my preferred tech stack.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node index.ts",
    "prepare": "pnpm build",
    "build": "tsc && tsc-alias && cpy \"templates/**/*\" \"templates/**/.*\" dist/templates --dot",
    "start": "pnpm build && node dist/index.js"
  },
  "bin": {
    "create-syl-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "dist/templates/default/.gitignore"
  ],
  "keywords": [
    "nextjs",
    "tailwind",
    "scaffold",
    "template",
    "cli",
    "prettier"
  ],
  "imports": {
    "@/*": "./dist/*"
  },
  "author": "Sylfr Serenity Tan Yi Qing",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@inquirer/prompts": "^7.5.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "fs-extra": "^11.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.17",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.27.0",
    "globals": "^16.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
